{
  "name": "cracked-org",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier . --write",
    "check-format": "prettier . --check",
    "check-types": "turbo run check-types",
    "check-unused": "knip",
    "clean": "pnpm -r exec rimraf .turbo .next node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "knip": "^5.61.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22"
  }
}
